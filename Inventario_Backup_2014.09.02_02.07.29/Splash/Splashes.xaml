<Window x:Class="Inventario.Splash.Splashes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Inventario.Splash"
        Title="SplashScreen"
        AllowsTransparency="True"
        Width="414"
        Height="450"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="/Inventario;component/Resources/icon.png"></ImageBrush>
    </Window.Background>
    <Grid>
        <Label Name="label1"
               Margin="19,22,17,80"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               FontSize="48"
               Foreground="MintCream">
            <Label.BitmapEffect>
                <OuterGlowBitmapEffect GlowSize="15" />
            </Label.BitmapEffect>
            Cargando...
        </Label>
        <Label Name="label2"
               Height="28"
               Margin="19,0,17,15"
               VerticalAlignment="Bottom"
               Content="{Binding Source={x:Static local:MessageListener.Instance},
                                 Path=Message}"
               Foreground="Red" />
    </Grid>
</Window>